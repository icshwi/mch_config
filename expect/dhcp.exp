dialog "$mchcfgprompt" "3"
dialog "Enable RMCP access (y/n) (RET=\*): " ""
dialog "Enable telnet access (y/n) (RET=\*): " ""
dialog "Enable WEB access (y/n) (RET=\*): " ""
dialog "Enable ssh access (y/n) (RET=\*): " ""
